generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int       @id @default(autoincrement())
  firstName             String
  lastName              String
  email                 String    @unique
  age                   Int?
  gender                String?
  address               String?
  phoneNumber           Int?
  isDeleted             Boolean   @default(false)
  isAdmin               Boolean   @default(false)
  password              String
  isInitinalPassword    Boolean   @default(false)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("users")
}

model Pay {
  id             Int       @id @default(autoincrement())
  userId         Int       // 外部キー
  isDeleted      Boolean   @default(false)
  employmentType String
  fixedSalary    Int?
  hourWage       Int?
  overtimePay    Int?
  paymentDate    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("pays")
}

model File {
  id          Int       @id @default(autoincrement())
  
  userId      Int       // 外部キー
  isDeleted   Boolean   @default(false)
  title       String
  tagId       Int
  deadline    DateTime?
  filePath    String?
  fileSize    Int?
  fileType    String?
  statusId    Int
  sendDate    DateTime
  sender      Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("files")
}
