generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                    Int       @id @default(autoincrement())
  first_name            String
  last_name             String
  email                 String    @unique
  age                   Int?
  gender                String?
  address               String?
  phone_number          Int?
  is_deleted            Boolean   @default(false)
  is_admin              Boolean   @default(false)
  password              String
  is_initinal_password  Boolean   @default(false)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}